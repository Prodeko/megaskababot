// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
  output        = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  telegramUserId   BigInt   @id
  telegramUsername String
  firstName        String
  lastName         String?
  freshmanYear     Int
  guild            String
  createdAt        DateTime @default(now())
  entries          Entry[]
}

model Entry {
  id              Int      @id @default(autoincrement())
  distance        Float
  fileId          String
  sport           String
  user            User     @relation(fields: [userId], references: [telegramUserId])
  doublePoints    Boolean  @default(false)
  userId          BigInt
  createdAt       DateTime @default(now())
  valid           Boolean?
  sportMultiplier Float
  earnedPoints    Float
}

// For persistent storage of Grammy sessions. 
// See https://github.com/grammyjs/storages/tree/main/packages/prisma
model GrammySession {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}
